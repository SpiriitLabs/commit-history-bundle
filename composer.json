{
    "name": "spiriitlabs/commit-history-bundle",
    "description": "Symfony bundle to display git commit history in a vertical timeline",
    "type": "symfony-bundle",
    "license": "MIT",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Spiriit",
            "email": "dev@spiriit.com"
        }
    ],
    "repositories": [
        {
            "type": "path",
            "url": "../commit-history-lib"
        }
    ],
    "require": {
        "php": ">=8.2",
        "spiriitlabs/commit-history": "@dev",
        "symfony/cache": "^6.4|^7.0",
        "symfony/console": "^6.4|^7.0",
        "symfony/framework-bundle": "^6.4|^7.0",
        "symfony/http-client": "^6.4|^7.0",
        "twig/twig": "^3.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.92",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-symfony": "^2.0",
        "phpunit/phpunit": "^10.0",
        "rector/rector": "^2.3",
        "symfony/phpunit-bridge": "^6.4|^7.0"
    },
    "autoload": {
        "psr-4": {
            "Spiriit\\Bundle\\CommitHistoryBundle\\": "src/"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Spiriit\\Bundle\\CommitHistoryBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "check": [
            "@cs-check"
        ],
        "cs-check": "vendor/bin/php-cs-fixer fix --verbose --diff --dry-run",
        "cs-fix": "vendor/bin/php-cs-fixer fix --verbose --diff",
        "test": [
            "vendor/bin/phpunit"
        ]
    }
}
