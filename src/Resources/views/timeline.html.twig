<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ feed_name }} - Commit History</title>
    <style>
        :root {
            --timeline-color: #e5e7eb;
            --timeline-dot-color: #3b82f6;
            --timeline-dot-size: 14px;
            --timeline-line-width: 2px;
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            background: #f9fafb;
            color: #1f2937;
            line-height: 1.6;
            margin: 0;
            padding: 2rem;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
        }

        .page-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1rem;
        }

        h1 {
            font-size: 1.875rem;
            font-weight: 700;
            margin: 0;
            color: #111827;
        }

        .page-description {
            color: #6b7280;
            font-size: 0.875rem;
            margin-bottom: 2rem;
        }

        /* Block */
        .timeline {
            position: relative;
            padding-left: 2.5rem;
        }

        .timeline::before {
            content: '';
            position: absolute;
            left: 6px;
            top: 0;
            bottom: 0;
            width: var(--timeline-line-width);
            background: var(--timeline-color);
        }

        /* Block Modifier */
        .timeline--empty {
            text-align: center;
            padding: 3rem;
            color: #6b7280;
        }

        /* Date Group */
        .timeline__date-group {
            padding-bottom: 2rem;
        }

        .timeline__date-group:last-child {
            padding-bottom: 0;
        }

        .timeline__date-header {
            position: relative;
            font-size: 1rem;
            font-weight: 600;
            color: #111827;
            padding: 0.25rem 0;
            margin-bottom: 0.75rem;
        }

        .timeline__date-header::before {
            content: '';
            position: absolute;
            left: calc(-2.65rem + 6px - var(--timeline-dot-size) / 2 + var(--timeline-line-width) / 2);
            top: 50%;
            transform: translateY(-50%);
            width: var(--timeline-dot-size);
            height: var(--timeline-dot-size);
            background: var(--timeline-dot-color);
            border-radius: 50%;
            border: 2px solid #fff;
            box-shadow: 0 0 0 2px var(--timeline-dot-color);
        }

        /* Commits list */
        .timeline__commits {
            margin-left: 0.25rem;
            padding-left: 2.5rem;
        }

        /* Elements */
        .timeline__item {
            position: relative;
            padding: 0.5rem 0;
            border-bottom: 1px solid #f3f4f6;
        }

        .timeline__item:last-child {
            border-bottom: none;
            padding-bottom: 0;
        }

        .timeline__item:first-child {
            padding-top: 0;
        }

        .timeline__title {
            font-weight: 500;
            color: #1f2937;
            word-break: break-word;
            flex: 1;
        }

        /* Accordion styles using details/summary */
        .timeline__details {
            border: none;
        }

        .timeline__details summary {
            cursor: pointer;
        }

        .timeline__details summary .timeline__header {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            width: calc(100% - 1.5rem);
            justify-content: space-between;
        }

        .timeline__details:hover {
            background: #f9fafb;
        }

        .timeline__header {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            flex: 1;
        }

        .timeline__deps-badge {
            font-size: 0.625rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            background: #dbeafe;
            color: #1d4ed8;
            padding: 0.125rem 0.375rem;
            border-radius: 0.25rem;
            white-space: nowrap;
        }

        .timeline__accordion-content {
            margin-top: 0.75rem;
            padding: 0.75rem;
            background: #f9fafb;
            border-radius: 0.375rem;
            font-size: 0.875rem;
        }

        .timeline__changes-list {
            margin: 0;
            padding: 0;
            list-style: none;
        }

        .timeline__change-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.25rem 0;
        }

        .timeline__change-icon {
            width: 1rem;
            text-align: center;
            font-weight: 600;
        }

        .timeline__change-icon--updated {
            color: #2563eb;
        }

        .timeline__change-icon--added {
            color: #16a34a;
        }

        .timeline__change-icon--removed {
            color: #dc2626;
        }

        .timeline__change-package {
            font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
            font-size: 0.8125rem;
        }

        .timeline__change-versions {
            color: #6b7280;
            font-size: 0.8125rem;
        }

        .timeline__loading {
            color: #6b7280;
            font-style: italic;
        }

        .timeline__no-changes {
            color: #6b7280;
        }

        .timeline__filter-select {
            padding: 0.5rem 0.75rem;
            font-size: 0.875rem;
            border: 1px solid #d1d5db;
            border-radius: 0.375rem;
            background: #fff;
            color: #1f2937;
            cursor: pointer;
        }

        .timeline__filter-select:focus {
            outline: none;
            border-color: var(--timeline-dot-color);
            box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
        }

        @media (max-width: 640px) {
            body {
                padding: 1rem;
            }

            .timeline {
                padding-left: 2rem;
            }

            .timeline__date-header::before {
                left: calc(-2rem + 6px - var(--timeline-dot-size) / 2 + var(--timeline-line-width) / 2);
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="page-header">
            <h1>{{ feed_name }}</h1>
            {% if available_years is defined and available_years|length > 0 %}
                <form method="GET">
                    <select name="year" class="timeline__filter-select" onchange="this.form.submit()">
                        {% for year in available_years %}
                            <option value="{{ year }}" {% if selected_year == year %}selected{% endif %}>
                                {{ year }}
                            </option>
                        {% endfor %}
                    </select>
                </form>
            {% endif %}
        </div>
        <p class="page-description">
            Commits marked with <span class="timeline__deps-badge">deps</span> contain dependencies changes. Click to view package updates.<br>
            <span class="timeline__change-icon timeline__change-icon--added">+</span> added<br>
            <span class="timeline__change-icon timeline__change-icon--removed">&minus;</span> removed<br>
            <span class="timeline__change-icon timeline__change-icon--updated">&uarr;</span> updated<br>
        </p>

        {% if commits is empty %}
            <div class="timeline--empty">
                <p>No commits found.</p>
            </div>
        {% else %}
            {# Group commits by date #}
            {% set grouped_commits = {} %}
            {% for commit in commits %}
                {% set date_key = commit.date|date('Y-m-d') %}
                {% if grouped_commits[date_key] is not defined %}
                    {% set grouped_commits = grouped_commits|merge({(date_key): []}) %}
                {% endif %}
                {% set grouped_commits = grouped_commits|merge({
                    (date_key): grouped_commits[date_key]|merge([commit])
                }) %}
            {% endfor %}

            <div class="timeline">
                {% for date_key, day_commits in grouped_commits %}
                    <div class="timeline__date-group">
                        <div class="timeline__date-header">
                            {{ day_commits[0].date|date('F d, Y') }}
                        </div>
                        <div class="timeline__commits">
                            {% for commit in day_commits %}
                                {% if commit.hasComposerChanges %}
                                    <details class="timeline__item timeline__details" data-commit-id="{{ commit.id }}">
                                        <summary>
                                            <div class="timeline__header">
                                                <div class="timeline__title">{{ commit.title }}</div>
                                                <span class="timeline__deps-badge">deps</span>
                                            </div>
                                        </summary>
                                        <div class="timeline__accordion-content">
                                            <div class="timeline__loading">Loading changes...</div>
                                        </div>
                                    </details>
                                {% else %}
                                    <div class="timeline__item">
                                        <div class="timeline__title">{{ commit.title }}</div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.timeline__details').forEach(function(details) {
                details.addEventListener('toggle', function() {
                    if (!details.open) return;

                    var contentEl = details.querySelector('.timeline__accordion-content');
                    if (contentEl.dataset.loaded === 'true') return;

                    var commitId = details.dataset.commitId;
                    var url = '{{ path("spiriit_commit_history_composer_changes", {commitId: "__COMMIT_ID__"}) }}'.replace('__COMMIT_ID__', commitId);

                    fetch(url)
                        .then(function(response) { return response.json(); })
                        .then(function(data) {
                            contentEl.dataset.loaded = 'true';
                            if (!data.changes || data.changes.length === 0) {
                                contentEl.innerHTML = '<div class="timeline__no-changes">No composer changes found</div>';
                                return;
                            }
                            var html = '<ul class="timeline__changes-list">';
                            data.changes.forEach(function(change) {
                                var icon = change.type === 'updated' ? '&uarr;' : (change.type === 'added' ? '+' : '-');
                                var versions = change.type === 'added' ? '&rarr; ' + change.to :
                                               change.type === 'removed' ? change.from + ' &rarr;' :
                                               change.from + ' &rarr; ' + change.to;
                                html += '<li class="timeline__change-item">' +
                                    '<span class="timeline__change-icon timeline__change-icon--' + change.type + '">' + icon + '</span>' +
                                    '<span class="timeline__change-package">' + change.package + '</span>' +
                                    '<span class="timeline__change-versions">' + versions + '</span></li>';
                            });
                            contentEl.innerHTML = html + '</ul>';
                        })
                        .catch(function() {
                            contentEl.innerHTML = '<div class="timeline__no-changes">Error loading changes</div>';
                        });
                });
            });
        });
    </script>
</body>
</html>
